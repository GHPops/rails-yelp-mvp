<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<% @restaurant.reviews.each do|review| %>
  <p> <%= review.content  %> - <%= review.rating  %></p>
<% end %>


<p> <%= link_to("Back to list", restaurants_path) %> </p>
<p> <%= link_to("Edit this restaurant", edit_restaurant_path) %> </p>
<p> <%= link_to("Add a review", new_restaurant_review_path(@restaurant)) %> </p>
<%= link_to "Delete", restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
